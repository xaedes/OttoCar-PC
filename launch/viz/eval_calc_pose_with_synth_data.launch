<launch>
    <group unless="$(has_param /viz/eval_calc_pose_with_synth_data)">
        <!-- Inform via log that visualization will not be started because of not set parameter. -->
        <node pkg="ottocar_utils" type="log.py" name="$(anon log_viz_eval_calc_pose_with_synth_data)"  output="screen"
            args="warn 'Parameter /viz/eval_calc_pose_with_synth_data not set, so no visualization started.'"/>
    </group>
    <group if="$(has_param /viz/eval_calc_pose_with_synth_data)">
        <group unless="$(has_param /guard/viz/eval_calc_pose_with_synth_data)">
            <param name="/guard/viz/eval_calc_pose_with_synth_data" value="True" />
            <node pkg="ottocar_utils" type="launch_guard.py" name="$(anon guard_viz_eval_calc_pose_with_synth_data)" args="/guard/viz/eval_calc_pose_with_synth_data" />


            <!-- Starts rviz to visualize the synthesized data -->
            <node pkg="rviz" name="$(anon eval_calc_pose_with_synth_data_rviz)" type="rviz" output="screen" args="-d $(launch_dir)/rviz/eval_calc_pose_with_synth_data.rviz" />
        </group>
    </group>
</launch>